<%if form.error_messages.present? %>
<div class="alert alert-error"> <%= form.error_messages %> </div>
<% end %>

<fieldset>
	<div class="control-group">
      <label class="control-label" for=""><font class="must">*</font>活动名称</label>
      <div class="controls">
        <%= form.text_field :name ,class: "input-xlarge", maxlength: 50%>
      </div>
    </div>

	<div class="control-group">
      <label class="control-label" for=""><font class="must">*</font>开始时间</label>
      <div class="controls">
        <%= form.text_field :started_at ,value: date_formatter(@activity.started_at) ,class: "input-xlarge datepicker", readonly:true%>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for=""><font class="must">*</font>结束时间</label>
      <div class="controls">
        <%= form.text_field :ended_at ,value: date_formatter(@activity.ended_at) ,class: "input-xlarge datepicker", readonly:true%>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button class="btn btn-kuma btn-large" type="submit">提交</button>
      </div>
    </div>
</table>
</fieldset>