<% form_tag '/admin/profile/reset_password', method: :put do %>
  <p>
    old password:
    <%= password_field_tag :password %>
  </p>
  <p>
    confirm password:
    <%= password_field_tag :password_confirmation %>
  </p>
  <p>
    new password:
    <%= password_field_tag :new_password %>
  </p>
  <p>
    <%= form.submit 'submit' %>
  </p>
<% end %>