<h4 class="sTitle">Setting</h4>

<ul class="nav nav-tabs">
  <li><a href="/admin/profile">Profile</a></li>
  <li class="active"><a href="/admin/profile/update_password">Update Password</a></li>
</ul>
<% form_tag '/admin/profile/update_password', method: :put, class:"form-horizontal" do %>
      <fieldset>
        <h4 class="pTitle">update password</h4>
        <div class="control-group">
          <label class="control-label" for="">current password</label>
          <div class="controls">
            <%= password_field_tag :current_password,class: "input-xlarge" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="">new password</label>
          <div class="controls">
            <%= password_field_tag :password,class: "input-xlarge" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="">confirm password</label>
          <div class="controls">
            <%= password_field_tag :password_confirmation,class: "input-xlarge" %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button class="btn btn-kuma btn-large" type="submit">立即发布</button>
          </div>
        </div>
      </fieldset>
<% end %>