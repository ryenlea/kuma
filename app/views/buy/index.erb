<h4 class="sTitle"><font>【酷妈活动】</font><%= @activity.name %></h4>
<div class="showPageInfo">
<p><%= @activity.started_at.strftime('%Y-%m-%d') %> - <%= @activity.ended_at.strftime('%Y-%m-%d')%> </p>
<hr/>
</div>
<div class="productList clearfix"> 
	<% @products.each do |product| %>
  <div class="item"><img src="<%= product.photo.url(:thumb) %>" alt=" " width="230"/>
    <h5><%= product.name %></h5>
    <div class="clearfix"> <span class="price"><%= product.sell_price %></span><span class="info">已有<font><%= product.order_items.count %>笔</font>预定</span></div>
    <div class="status clearfix"><span class="fl"><%= @activity.status %></span> <a class="btn fr btn-kumaSmall" href="/buy/<%= @activity.token%>/<%= product.id %>">查看详情</a></div>
  </div>
  <% end %>
</div>