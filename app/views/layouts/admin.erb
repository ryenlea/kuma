<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>酷妈团长</title>
<%== csrf_meta_tags %>
<%== stylesheet_tag 'admin' %>
</head>

<body>
<div id="topBar" class="clearfix"> <a id="logo" href="/"><img src="<%= image_path('main_logo.png') %>" alt="logo" /></a>
  <form id="searchBox" class="navbar-search pull-left">
    <input type="text" class="search-query" placeholder="Search">
  </form>
</div>
<div id="mainContent" class="clearfix"> 
  <!-- 左侧栏 -->
  <div id="leftNav">
    <div id="userBox" class="clearfix">
      <div class="face">
      	<img src="<%= @current_user.avatar.url %>" alt="avatar" />
      </div>
      <div class="info">
        <h4><%= @current_user.nickname %></h4>
        <a href="/admin/profile" class="setting">设置</a>
        <%= link_to "退出", '/logout', method: :delete , confirm: 'u wanna logout?' %> 
      </div>
    </div>
    <a href="/admin/products/new" id="addProBtn">添加商品</a>
    <ul id="menuList">
    <%if @current_user.saler? %>
      <li><a href="/admin/activities" class="active">我的活动</a></li>
      <li><a href="/admin/products">我的商品</a></li>
    <%elsif @current_user.admin? %>
      <li><a href="/admin/users" class="active">users</a></li>
    <%else %>
    <%end%>
    </ul>
  </div>
  <!-- 左侧栏结束 --> 
  <!-- 右侧栏 -->
  <div id="rightBox">
  	<%= yield %>
  </div>
  <!-- 右侧栏结束 --> 
</div>
</div>
<!-- Modal 弹出用<a href="#loginModal" data-toggle="modal">示例<a> -->
        <div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">会员登陆</h3>
          </div>
          <div class="modal-body">
            <form class="form-signin">
              <fieldset>
                <h2 class="form-signin-heading">请登陆</h2>
                <div class="control-group">
                  <label class="control-label" for="input01">用户名</label>
                  <div class="controls">
                    <input type="text" class="input-xlarge" placeholder="用户名" >
                  </div>
                  <label class="control-label" for="input02">密码</label>
                  <div class="controls">
                    <input type="text" class="input-xlarge" placeholder="密码" >
                  </div>
                  <div class="controls">
                    <input type="checkbox" value="remember-me">
                    记住密码 </div>
                </div>
              </fieldset>
            </form>
          </div>
          <div class="modal-footer"> <a class="btn" href="reg.php">注册</a>
            <button class="btn btn-success">登陆</button>
          </div>
        </div>
<%== javascript_tag 'admin',charset: "UTF-8" %>
</body>
</html>